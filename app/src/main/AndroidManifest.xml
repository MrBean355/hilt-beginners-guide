<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.mrbean355.android.hilt">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".DemoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hilt">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".basics.BasicsActivity"
            android:label="@string/title_basics" />
        <activity
            android:name=".components.ComponentsActivity"
            android:label="@string/title_components" />
        <activity
            android:name=".qualifiers.QualifiersActivity"
            android:label="@string/title_qualifiers" />
        <activity
            android:name=".scopes.ScopesActivity"
            android:label="@string/title_scopes" />
        <activity
            android:name=".lazy.LazyActivity"
            android:label="@string/title_lazy_bindings" />
        <activity
            android:name=".nullable.NullableBindingsActivity"
            android:label="@string/title_nullable_bindings" />
        <activity
            android:name=".optional.OptionalBindingsActivity"
            android:label="@string/title_optional_bindings" />
        <activity
            android:name=".multibindings.MultiBindingsActivity"
            android:label="@string/title_multi_bindings" />
        <activity
            android:name=".combination.CombinationActivity"
            android:label="@string/title_combination" />
    </application>

</manifest>